<div class="breadcrumbs">
  <% breadcrumb :ad_new %>
</div>  
<div class="content">
  <div class="container">
    <h2><span>create ad</span></h2>
    <%= form_with model: @ad, local: true do |form| %>
    <%= form.text_field :img_url, placeholder: 'img' %>
    <%= form.text_field :af_link, placeholder: 'af' %>
    <%= form.collection_select(:ad_rate_id, AdRate.all, :id, :name, {}, {class:"select-box", id:"ad_rate"}) %>
    <%= form.submit "create ad" %>
    <% end %>
  </div>
</div>
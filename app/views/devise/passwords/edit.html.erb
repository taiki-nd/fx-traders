<h2><span>パスワードの変更<span></h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <%= f.hidden_field :reset_password_token %>

  <div class="field">
    <%= f.password_field :password, autofocus: true, autocomplete: "new-password", placeholder: "新しいパスワード(半角英数混合6文字以上)" %>
  </div>

  <div class="field">
    <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "新しいパスワード（確認）" %>
  </div>

  <div class="actions">
    <%= f.submit "Change password" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

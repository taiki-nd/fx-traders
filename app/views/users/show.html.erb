<section class="content">
  <h2><%= @name %>さんのページ</h2>
  <h3><%= @name %>さんの取引分析</h3>
  <h3><%= @name %>さんの取引履歴</h3>
  <div class="grid">
    <% @records.each do |record| %>
      <%= render partial: "shared/records", locals: { record: record } %>
    <% end %>
  </div>
  <div class="pagi">
    <%= paginate @records %>
  </div>
  <h3><%= @name %>さんの取引手法</h3>
  <div class="grid_">
    <% @rules.each do |rule| %>
      <%= render partial: "shared/rules", locals: { rule: rule } %>
    <% end %>
  </div>
  <div class="pagi">
    <%= paginate @rules %>
  </div>
</section>
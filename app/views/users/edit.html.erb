<div class="breadcrumbs">
  <% breadcrumb :user_edit, @user %>
</div>
<div class="content">
  <div class="container_sign">
    <h2><span>登録情報の変更</span></h2>
    
    <%= form_with model: current_user, local: true do |f|%>

      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>
      
      <div class="field">
        <%= f.label :name %> <br />
        <%= f.text_field :name, autofocus: true %>
      </div>
    
      <div class="actions">
        <%= f.submit "Update", data: { confirm: "メールアドレスを変更した場合はメールをご確認のうえ認証手続きを進めてください" }%>
      </div>
    <% end %>
  </div>
</div>
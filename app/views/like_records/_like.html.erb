<% if user_signed_in? %>
  <% if current_user.liked_by?(record.id) %>
    <td><%= link_to 'いいねを外す', destroy_like_record_path(record), method: :DELETE, remote: true %> <%= record.like_records.count %></td>
  <% else %>
    <td><%= link_to 'いいね', create_like_record_path(record), method: :POST, remote: true %> <%= record.like_records.count %></td>
  <% end %>
<% end %>